    <androidx.cardview.widget.CardView
        android:id="@+id/AboutUs"
        android:layout_width="343dp"
        android:layout_height="50dp"
        android:layout_marginTop="45dp"
        android:clickable="true"
        android:paddingTop="5dp"
        app:cardBackgroundColor="@color/softer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/watchList">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="13dp"
            android:paddingStart="5dp"
            android:text="About Us"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:drawablePadding="5dp"
            app:drawableEndCompat="@drawable/baseline_arrow_forward_ios_24"
            app:drawableStartCompat="@drawable/baseline_article_24"
            tools:ignore="RtlSymmetry" />

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/signOut"
        android:layout_width="340dp"
        android:layout_height="55dp"
        android:background="@drawable/rounded_corners"
        android:text="Sign Out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AboutUs" />
